@model Entities.ViewModels.TeamViewModels.CreateTeamViewModel

@{
    ViewData["Title"] = "Создание группы";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Team" asp-action="Create" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <p class="text-info">
        При регистрировании группы Вы автоматически становитесь ее руководителем. Для начала
        заполните общую информацию о Вашей группе, затем загрузите его символику.
    </p>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Section"></label>
        <select name="Section">
            <option value="ФИТУ">ФИТУ</option>
            <option value="ФИОП">ФИОП</option>
            <option value="ФГГНГД">ФГГНГД</option>
        </select>
    </div>

    <!--  <div class="form-group">
         <label asp-for="e"></label>
         <input asp-for="u" class="form-control" />
         <span asp-validation-for="elp" class="text-danger"></span>
     </div>
        -->
    <div class="form-group">
        <div class="col-md-offset-2">
            <button type="submit" class="btn btn-default">Следующий шаг</button>
        </div>
    </div>

</form>
